    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="City, Age"
        android:id="@+id/generalinfo"
        android:layout_above="@+id/scrollView"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_toStartOf="@+id/generalinfo"
        android:onClick="messageMe"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/scrollView"
        android:layout_toLeftOf="@+id/generalinfo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="pokeMe"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/generalinfo"
        android:layout_below="@+id/scrollView"
        android:layout_toRightOf="@+id/generalinfo" />


